{% comment %} assign les value du schema {% endcomment %}
{% assign h1_font_size = section.settings.tailleTitre | append:'px' %}
{% assign h1_text_align = section.settings.titre_alignment %}
{% assign h1_color = section.settings.couleurTitle %}
{% assign bg_color = section.settings.couleurFond %}

{% comment %} le html du titre et des paragraphes {% endcomment %}
<div class="livraisons-retours">
  <h1 class="livraisons-retours-h1">
    {{ section.settings.title  }}
  </h1>
  {% for block in section.blocks %}
    <div class="livraisons-paragraphe" style="background-color: {{ block.settings.couleurFondParagraphe }}">
      <p style="font-size: {{ block.settings.Tailletexte | append: 'px' }}; text-align: {{ block.settings.Texte_alignment }}; color: {{ block.settings.Couleurtexte }};">
        {{ block.settings.Texte }}
      </p>
    </div>
  {% endfor %}
</div>

{% comment %} le schema du paragraphe {% endcomment %}
{% schema %}
  {
    "name":"livraisons_retours",
    "settings":[
      {
        "id":"title",
        "type":"text",
        "label":"Titre",
        "default":"Mon titre"
      },
      {
        "type": "color",
        "id": "couleurTitle",
        "label": "Couleur du titre",
        "default": "#222222"
      },
      {
        "type": "text",
        "id": "tailleTitre",
        "label": "taille du titre",
        "default": "25"
      },
      {
        "type": "radio",
        "id": "titre_alignment",
        "options": [
          { "value": "Left", "label": "Gauche"},
          { "value": "Center", "label": "Milieu"},
          { "value": "Right", "label": "Droite"}
        ],
        "label": "Alignement du titre"
      },
      {
        "type": "color",
        "id": "couleurFond",
        "label": "Couleur du fond",
        "default": "#ffffff"
      }
    ],
    "max_blocks": 10,
    "blocks": [
      {
        "type":"oneParagraphe",
        "name":"oneParagraphe",
        "settings": [
          {
            "id":"Texte",
            "type":"richtext",
            "label":"Texte",
            "default":"<p>Mon texte</p>"
          },
          {
            "type": "color",
            "id": "Couleurtexte",
            "label": "Couleur du texte",
            "default": "#222222"
          },
          {
            "type": "text",
            "id": "Tailletexte",
            "label": "taille du texte",
            "default": "15"
          },
          {
            "type": "radio",
            "id": "Texte_alignment",
            "options": [
              { "value": "Left", "label": "Gauche"},
              { "value": "Center", "label": "Milieu"},
              { "value": "Right", "label": "Droite"}
            ],
            "label": "Alignement du texte"
          },
          {
            "type": "color",
            "id": "couleurFondParagraphe",
            "label": "Couleur du fond du texte",
            "default": "#ffffff"
          }
        ]
      }
    ]
  }
{% endschema %}

{% style %}
  .livraisons-retours{
    display:grid;
    background-color: {{ bg_color }};
    margin-right:25px;
    margin-left:25px;
  }

  .livraisons-retours-h1{
    color: {{ h1_color }} ;
    font-size: {{ h1_font_size }};
    text-align: {{ h1_text_align }};
  }

  .livraisons-paragraphe{
    margin-top:15px;
    margin-bottom:15px;
  }
{% endstyle %}