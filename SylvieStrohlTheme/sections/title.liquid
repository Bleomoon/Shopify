{%comment%} Ici on assigne les val du schéma {%endcomment%}
{% assign h1_font_size = section.settings.tailleTitre | append:'px' %}
{% assign h1_text_align = section.settings.titre_alignment %}
{% assign h1_color = section.settings.couleurTitle %}
{% assign bg_color = section.settings.couleurFond %}

{%comment%} Ici le html{%endcomment%}
<div class="entretienTitle-myTitle">
    <h2 class="entretienTitle-myTitle-h1">{{ section.settings.title }}</h2>
</div>

{%comment%} Ici le schéma du titre avec couleur, style, background-color etc {%endcomment%}
{% schema %}
{
    "name":"title",
    "settings":[
    {
      "id":"title",
      "type":"text",
      "label":"Titre",
      "default":"Mon titre"
    },
    {
      "type": "color",
      "id": "couleurTitle",
      "label": "Couleur du titre",
      "default": "#222222"
    },
    {
      "type": "text",
      "id": "tailleTitre",
      "label": "taille du titre",
      "default": "25"
    },
    {
      "type": "radio",
      "id": "titre_alignment",
      "options": [
        { "value": "Left", "label": "Gauche"},
        { "value": "Center", "label": "Milieu"},
        { "value": "Right", "label": "Droite"}
      ],
      "label": "Alignement du titre"
    }
  ]
}
{% endschema %}

{%comment%} Ici le style css{%endcomment%}
{% style %}
    .entretienTitle-myTitle{
      margin-bottom:25px;
      margin-top:25px;
      background-color : {{ bg_color }};
    }

    .entretienTitle-myTitle-h1{
      color: {{ h1_color }};
      font-size: {{ h1_font_size }};
      text-align: {{ h1_text_align }};
    }
{% endstyle %}
