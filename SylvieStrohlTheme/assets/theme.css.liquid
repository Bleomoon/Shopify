/*CSS du HEADER*/
.header {
    font-size: $font-size;
    background: #EEE;
    position: sticky;
    top: 0;
    align-items: center;
    display: grid;
}

.header-logo {
    text-align: left;
    grid-column: 1;
    grid-row: 1;
    padding-left: 10px;
}


.header-icons-Ref {
    background: none;
    border: none;
    cursor: pointer;
    grid-column: 3;
    grid-row: 1;
}

.header-icons-search {
    background: none;
    border: none;
    cursor: pointer;
    grid-column: 1;
    grid-row: 1;
}

.header-icons-cart {
    background: none;
    border: none;
    cursor: pointer;
    grid-column: 2;
    grid-row: 1;
}

/* Css du panier*/
.showCart {
    display: none;
    position: absolute;
    width: 15%;
    top: 100%;
    right:0;
    background-color: white;
}

.noItemInCart {
    display: grid;
}

.ItemsInCart{
    display: grid;
}

.ItemInCart {
    display: grid;
}

.ItemImg {
    grid-column: 1;
}

.ItemText {
    grid-template-rows: repeat(4, 1fr);
    display: grid;
    grid-column: 2;
    font-family: cursive;
    font-style: italic;
    text-align: left;
}

.ItemText-h3 {
    grid-row: 1;
    font-size:10px;
}

.ItemText-qte {
    grid-row: 2;
    font-size:10px;
}

.ItemText-prix {
    grid-row: 3;
    font-size:10px;
}

.ItemText-delete {
    background:none;
    color:gray;
    grid-column: 3;
}

.ItemText-delete:hover {
    color:black;
}

.goPanierItems {
    display: grid;
    grid-template-rows: repeat(3, 1fr);
    grid-template-columns: repeat(2, 1fr);
    font-size: 12px;
    font-weight: bold;
    text-shadow: none;
    letter-spacing: 1px;
}

.goPanierItems-h2Tot {
    grid-column: 1;
    grid-row: 1;
}

.goPanierItems-h2Prix {
    grid-column: 2;
    grid-row: 1;
    text-align: end;
}

.goPanierItems-goPanier-A{
    grid-column: 1/3;
    grid-row: 2;
    border-color: black;
    border-style: groove;
    background-color: none;
    margin:auto;
    padding: 10px;
    width: max-content;
}

.goPanierItems-goFin-A{
    color:white;
    grid-row: 3;
    grid-column: 1/3;
    background-color: black;
    margin:auto;
    padding: 10px;
    width: max-content;
}

/* Css du searchbox*/
.searchbox-content {
    display: none;
    position: absolute;
    justify-content: flex-end;
    width: 100%;
    left: 0;
    top: 100%;
    box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
}

.searchbox-search {
    display: flex;
    border: none;
    width: 100%;
}

.search-bar {
    background: none;
    border: none;
    width: 98%;
}

.search-input {
    border: none;
    width: 96%;
}

.btn-close {
    display: flex;
    justify-content: flex-end;
    background: none;
    border: none;
    font-size: 25px;
    width: 1%;
}

.searchbox-Btn {
    border: none;
    background: none;
    font-size: 20px;
    width: 2%;
}

.searchbox-content.show {
    display: flex;
}

/* Css du user*/
.user {
    width: 0;
    left: -999px;
    transition: left 0.1s;
    display: block;
    position: absolute;
    top: 100%;
}

.user-item {
    display: block;
    padding: 10px;
}

.user.open {
    width: 100%;
    left: 0;
    justify-content: end;
    background: #EEE;
    display: grid;
}

@media screen and (min-width:900px) {
    .header-navbar {
        display: ruby;
        grid-column: 2;
        grid-row: 1;
    }

    .header-icons {
        display: grid;
        grid-column: 3;
        grid-row: 1;
        grid-template-columns: repeat(3, 1fr);
        margin: auto;
    }

    .navbar-toggler {
        display: none;
        justify-content: flex-end;
    }

    .navbar {
        position: relative;
        left: 0;
        transition: none;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .navbar-item {
        display: inline-flex;
        padding: 10px;
    }

    .menu-smallScreen {
        display: none;
    }
}



/*Un seul boutton menu regroupant, (connexion, crée compte) ou (déconnexion, mon compte) 
Et Accueil, accessoires, collections, /Sylvie Strohl, Blog
*/
@media screen and (max-width:900px) {
    .header-navbar {
        display: none;
    }

    .header-icons {
        display: none;
    }

    .menu-smallScreen {
        grid-column: 2;
        grid-row: 1;
        text-align: right;
        padding: 10px;
        display: grid;
        margin: auto;
        padding-left: 75%;
    }

    .smallScreen {
        width: 0;
        left: -999px;
        transition: left 0.1s;
        display: block;
        position: absolute;
        top: 100%;
    }

    .smallScreen-item {
        display: block;
        padding: 10px;
        justify-content: flex-end;
    }

    .smallScreen.open {
        width: 100%;
        left: 0;
        justify-content: flex-end;
        background: #EEE;
    }
}

