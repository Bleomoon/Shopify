/*CSS du FOOTER*/
.footer {
    display: block;
    top: 0;
    align-items: : center;
    $font-size: $font-size;
    $font-family: $font-family;
    position: sticky;
}

.topFooter {
    display: inline-bloc;
    width:33%;
    padding-bottom: 10px;
    flex: 1;
}

.topFooter-contact {
