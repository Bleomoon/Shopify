/*Reset Css */
a,abbr,acronym,address,applet,article,aside,audio,b,big,blockquote,body,canvas,caption,center,cite,code,dd,del,details,dfn,div,dl,dt,em,embed,fieldset,figcaption,figure,footer,form,h1,h2,h3,h4,h5,h6,header,hgroup,html,i,iframe,img,ins,kbd,label,legend,li,mark,menu,nav,object,ol,output,p,pre,q,ruby,s,samp,section,small,span,strike,strong,sub,summary,sup,table,tbody,td,tfoot,th,thead,time,tr,tt,u,ul,var,video{margin:0;padding:0;border:0;font-size:100%;font:inherit;vertical-align:baseline}article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section{display:block}body{line-height:1}ol,ul{list-style:none}blockquote,q{quotes:none}blockquote:after,blockquote:before,q:after,q:before{content:'';content:none}table{border-collapse:collapse;border-spacing:0}

/* variables */
$font-size:1rem;
$font-family: sans-serif;

/* pour les icones */
.fas {
    font-size: $font-size;
}

.body {
    font-size: $font-size * 5;
}

.buttonRef {
    background: none;
    border: none;
    cursor: pointer;
}

.aRef {
    text-decoration: none;
    color:black;
}



/*CSS du HEADER*/
.header {
    font-size: $font-size;
    background: #EEE;
    position: sticky;
    top: 0;
    align-items: center;
    display: flex;
}

.header-logo{
    padding-left: 10px;
}

.header-icons-Ref{
    background: none;
    border: none;
    cursor: pointer;
}

.header-icons-search{
    background: none;
    border: none;
    cursor: pointer;
}

.header-icons-cart{
    background: none;
    border: none;
    cursor: pointer;
}

.searchbox-content{
    display:none;
    position:absolute;
    justify-content: flex-end;
    width:100%;
    left:0;
    top:100%;
    box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
}

.searchbox-search{
    display: flex;
    border: none;
    width:100%;
}

.search-bar{
    background: none;
    border: none;
    width:98%;
}

.search-input{
    border:none;
    width:96%;
}

.btn-close{
    display: flex;
    justify-content: flex-end;
    background: none;
    border: none;
    font-size: 25px;
    width:1%;
}

.searchbox-Btn{
    border: none;
    background: none;
    font-size: 20px;
    width:2%;
}

.searchbox-content.show{
    display:flex;
}

.user {
    width: 0;
    left: -999px;
    transition: left 0.1s;
    display: block;
    position: absolute;
    top: 100%;
}

.user-item {
    display: block;
    padding: 10px;
}

.user.open {
    width: 100%;
    left: 0;
    justify-content: end;
    background: #EEE;
    display:grid;
}

.menu-smallScreen {
    display: none;
}

@media screen and (max-width:900px){
    .header-logo {
        display: flex;
        flex: 1;
        justify-content: flex-start;
    }

    .header-navbar {
        display: flex;
        justify-content: flex-end;
        flex: 1;
    }

    .navbar-toggler {
        cursor: pointer;
        justify-content: flex-end;
        background: none;
        border: none;
    }

    .navbar {
        width: 0;
        left: -999px;
        display: block;
        transition: left 0.7s;
        position: absolute;
        top: 100%;
    }

    .navbar-item {
        display: inline-block;
        padding: 10px;
    }

    /*Fonction qand on clique sur la navbar*/
    .navbar.open {
        width: 100%;
        left: 0;
        background: #EEE;
    }

    .header-icons {
        display: flex;
        flex: 1;
        justify-content: flex-end;
        padding: 10px
    }

    
}

/*Si taille de l'écran moyen*/
@media screen and (min-width:900px) {
    .header-navbar{
        display: flex;
        justify-content: flex-end;
        flex:1;
    }

    .navbar-toggler {
        display: none;
        justify-content: flex-end;
    }

    .navbar {
        position: relative;
        left: 0;
        transition: none;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .navbar-item {
        display: inline-flex;
        padding: 10px;
    }

    .menu-smallScreen {
        display: none;
    }
}

/*Un seul boutton menu regroupant, (connexion, crée compte) ou (déconnexion, mon compte) 
Et Accueil, accessoires, collections, /Sylvie Strohl, Blog
*/
@media screen and (max-width:576px)
{

    .header-icons{
        display: none;
    }
    .header-navbar{
        display: none;
    }

    .menu-smallScreen
    {
        display: flex;
        padding: 10px;
    }

    .smallScreen{
        width:0;
        left:-999px;
        transition : left 0.1s;
        display:block;
        position:absolute;
        top:100%;
    }

    .smallScreen-item{
        display:block;
        padding:10px;
        justify-content: flex-end;
    }

    .smallScreen.open{
        width:100%;
        left:0;
        justify-content: flex-end;
        background: #EEE;
    }
}

/*CSS du FOOTER*/
.footer {
    margin-top:10px;
    display: grid;
    top: 0;
    align-items: center;
    font-size: 1rem;
    font-family: sans-serif;
    position: sticky;
    text-align: center;
}

.topFooter {
    display:grid;
    padding-bottom: 10px;
    grid-row:1;
    grid-template-columns : repeat(3, 1fr);
}

.topFooter-contact {
    grid-column: 1;
}

.topFooter-Newsletter {
    grid-column:2;
}

.topFooter-Paiement {
    grid-column:3;
}

.botFooter {
    justify-content: center;
    flex: 1;
}

@media screen and (max-width:576px)
{
    .footer{
        display:grid;
    }
    .topFooter{
        grid-template-columns : repeat(1, 1fr);
        grid-row:1;
    }

    .topFooter-contact {
        grid-column: 1;
        grid-row:1;
    }

    .topFooter-Newsletter {
        grid-column: 1;
        grid-row:2;
    }

    .topFooter-Paiement {
        grid-column: 1;
        grid-row:3;
    }
}

/*CSS de la fiche d'un produit*/
.ficheProduct{
    display: grid;
    position: flex;
}

.ficheProduct-Img{
    display: grid;
    grid-column: 1/4;
    grid-row:1;
}

.ficheProduit-BigImg{
    grid-column: 2/4;
    grid-row: 1/10;
}

.ficheProduct-SousImg{
    grid-column:1;
    margin-left: 10px;
    margin-right: 10px;
    display: grid;
}

.ficheProduct-SousImg-0{
    grid-row:1/2;
}

.ficheProduct-SousImg-1{
    grid-row:3/4;
}

.ficheProduct-SousImg-2{
    grid-row:5/6;
}

.ficheProduct-SousImg-3{
    grid-row:7/8;
}

.ficheProduct-SousImg-4{
    grid-row:9/10;
}

.ficheProduct-Contenu{
    display: grid;
    grid-column: 5/7;
    grid-row: 1/2;
}

.ficheProduct-Contenu-Title{
    grid-column: 1;
    grid-row: 1;
}

.ficheProduct-OtherArticle{
    display:grid;
    grid-column:2;
    justify-content: end;
    grid-row: 1;
}

.ficheProduct-Desc{
    grid-row:3/5;
}

.ficheProduct-personnalise{
    grid-row:6/7;
}

.ficheProduct-Logos{
    justify-content: end;
    grid-row:8;
}

.ficheProduct-associateProduct{
    grid-row:9/10;
    display: grid;
}

.associateProductBtn{
    grid-row:1;
    background:none;
    border:none;
}

.associateProduct{
    display:none;
}

.associateProduct.open{
    display: grid;
    grid-row: 2;
}

.associateProduct-products-0{
    grid-row:1;
    grid-column:1;
}

.associateProduct-products-1{
    grid-row:1;
    grid-column: 2;
}

.associateProduct-products-2{
    grid-row:2;
    grid-column: 1;
}

.associateProduct-products-3{
    grid-row:2;
    grid-column: 2;
}

.infosComplementairesProduct{
    display: grid;
}

.infosComplementairesProduct-Titre{
    grid-row: 1;
    grid-column: 1;
}

.infosComplementairesProduct-paragraphe{
    grid-row:2;
    display: grid;
}

.infosComplementairesProduct-p{
    grid-row:1;
}

.infosComplementairesProduct-Btn{
    grid-row:2;
    justify-content: end;
}

/*Taille écran a partir de 0 à 760px*/
@media screen and (max-width:760px)
{
    .ficheProduct-Img{
        display: grid;
        grid-column: 1/4;
        grid-row:1;
    }

    .ficheProduit-BigImg{
        grid-column: 2;
        grid-row: 1/5;
    }

    .ficheProduct-Contenu{
        display: grid;
        grid-column: 1/4;
        grid-row: 2;
    }

    .ficheProduct-Contenu-Title{
        grid-column: 1;
        grid-row: 1;
    }

    .ficheProduct-OtherArticle{
        display:grid;
        grid-column:2;
        justify-content: end;
        grid-row: 1;
    }

    .ficheProduct-Desc{
        grid-row:2;
    }

    .ficheProduct-personnalise{
        grid-row:3;
    }

    .ficheProduct-Logos{
        grid-row:4;
    }

    .ficheProduct-associateProduct{
        display:none;
    }
        
    .infosComplementairesProduct-Titre{
        display:grid;
        grid-column: 1;
    }

    .infosComplementairesProduct-paragraphe{
        grid-column:2/4;
        display: grid;
    }

    .infosComplementairesProduct-p{
        grid-row:1;
    }

    .infosComplementairesProduct-Btn{
        grid-row:2;
        justify-content: end;
    }
}

/*Css section d'un produit*/
.productShow{
    padding-left: 1%;
    padding-right: 1%;
}

.product-img{
    max-width:100%;
    height:300px;
    width:300px;
}

.product-details{
    display: grid;
}

.product-details-Nom{
    grid-row: 1;
    justify-content: center;
    font-weight: bold;
    font-family: cursive;
}

.product-details-Prix{
    grid-row: 2;
    font-family: serif;
}