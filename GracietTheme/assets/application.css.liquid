/* variables */
$font-size:1rem;
$font-family: sans-serif;

/*Les taille de medias */
$screen-small: 576px;
$screen-medium: 760px;
$screen-large: 1024px;
$screen-xlarge: 1200px;

/* pour les icones */
.fas {
    font-size: $font-size;
}

.body {
    font-size: $font-size * 5;
}

.a {
    text-decoration: none;
}

.button {
    background: none;
    border: none;
}

/*CSS du HEADER*/
.header {
    font-size: $font-size;
    background: #EEE;
    position: sticky;
    top: 0;
    align-items: center;
    display: flex;

    button,
    a {
        background: none;
        border: none;
        color: #333;
        text-decoration: none;
    }
}

.header-logo {
    display: flex;
    flex: 1;
    justify-content: flex-start;
}

.header-navbar {
    display: flex;
    flex: 1;
}

.navbar-toggler {
    cursor: pointer;
    justify-content: flex-end;
}

.navbar {
    width: 0;
    left: -999px;
    display: block;
    transition: left 0.7s;
    position: absolute;
    top: 100%;
}

.navbar-item {
    display: inline-block;
    padding: 10px;
}

/*Fonction qand on clique sur la navbar*/
.navbar.open {
    width: 100%;
    left: 0;
    background: #EEE;
}


.header-icons {
    display: flex;
    flex: 1;
    justify-content: flex-end;
    padding: 10px
}

.user {
    width: 0;
    left: -999px;
    transition: left 0.1s;
    display: block;
    position: absolute;
    top: 100%;
}

.user-item {
    display: block;
    padding: 10px;
}

.user.open {
    width: 100%;
    left: 0;
    justify-content: flex-end;
    background: #EEE;
}

/*Si taille de l'écran moyen*/
@media screen and (min-width:760px) {
    .navbar-toggler {
        display: none;
    }

    .navbar {
        position: relative;
        left: 0;
        transition: none;
        width: 100%;
        display: block;
    }

    .navbar-item {
        display: inline-flex;
        padding: 10px;
    }

    .menu-smallScreen {
        display: : none;
    }
}

