{%comment%} Ici le style css de colelctionShow {%endcomment%}
{% style %}
    .collectionVedette{
        margin-top:25px;
        margin-bottom:25px;

        background-image: url('{{ section.settings.collectionImg | img_url:'5760x5760' }}');

        display:grid;
        grid-template-columns: repeat(2, 1fr);
    }
    .collectionVedette-contenu{
        display:grid;
        width:80%;
        grid-column: {{ positionContenu }};
    }
    .collectionVedette-h2{
        font-size: {{ h2_font_size }};
        color: {{ h2_color }};
        font-weight:900;
        width:max-content;
    }
    .collectionVedette-h3{
        font-size: {{ h3_font_size }};
        color: {{ h3_color }};
        font-weight:700;
        width:max-content;
    }
    .collectionVedette-a{
        background:none;
        text-decoration:none;
        color:white;
        margin:auto;
        border:groove;
    }
    .collectionVedette-a:hover{
        color:white;
        background-color:black;
        border:none;
    }
{% endstyle %}