{%comment%} Ici le html d'affichage d'une collection {%endcomment%}
<div class="collectionVedette">
    <div class="collectionVedette-contenu">
        <h3 class="collectionVedette-h3">COLLECTION</h3>
        <h2 class="collectionVedette-h2">{{ section.settings.collectionTitle }}</h2>
        <a class="collectionVedette-a" href="{{ section.settings.collectionUrl }}">Decouvrir</a>
    </div>
</div>

{%comment%} Ici le schema d'une collection 
Elle a un nom, une image et un url {%endcomment%}
{% schema %}
    {
        "name":"Collection en Vedette",
        "settings": [
            {
                "id":"collectionTitle",
                "type":"text",
                "label":"Nom de la Collection",
                "default":"Nom de ma collection"
            },
            {
                "id":"collectionImg",
                "type":"image_picker",
                "label":"Image de la collection"
            },
            {
                "id":"collectionUrl",
                "type":"url",
                "label":"Url de la Collection"
            },
            {
                "type": "color",
                "id": "couleurTitre1",
                "label": "Couleur titre 1",
                "default": "#222222"
            },
            {
                "type": "color",
                "id": "couleurTitre2",
                "label": "Couleur titre 2",
                "default": "#222222"
            },
            {
                "type": "text",
                "id": "tailleTitre1",
                "label": "taille du titre 1",
                "default": "11"
            },
            {
                "type": "text",
                "id": "tailleTitre2",
                "label": "taille du titre 2",
                "default": "11"
            },
            {
                "type": "checkbox",
                "id": "RightLeft",
                "default": true,
                "label": "Position du texte"
            }
        ],
        "presets":[
            {
                "name":"Collection en Vedette",
                "category":"Collection"
            }
        ]
    }
{% endschema %}

