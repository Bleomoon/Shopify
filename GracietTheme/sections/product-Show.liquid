<div class="productShow">
  {% for block in section.blocks %}
    <div class="productImage">
      <a class="aRef" href={{ block.poductLink }}><img src=""></a>
    </div>
    <div class="productText">
      <h3><a class="productTitle" href=lien> {{ section.productName }} </a></h3><br>
      <p class="productPrice"> {{ section.productPrice }} </p>
      <p class="producDesc"> {{ section.productDescription }} </p>
      <button><a class="aRef" href={{ section.poductLink }}><i class="fas fa-shopping-basket"></i></a></button>
    </div>
  {% endfor %}
</div>>

{% schema %}
{
  "name":"Show Product",
  "max_blocks": 5,
  "blocks": [
    {
    "type":"text",
    "name":"productShow"[
        {
          "type":"text",
          "id" :"productName",
          "label" : "Description du produit",
          "default" : "Description du produit"
        },
        {
        "type":"text",
        "id" :"productPrice",
        "label" : "Prix du produit",
        "default" : "80000"
        },
        {
        "type":"text",
        "id" :"productDescription",
        "label" : "Description du produit",
        "default" : "Description du produit"
        },
        {
        "type":"url",
        "id" :"poductLink",
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Show Product",
      "category":"Contenu"
    }
  ]
}
{% endschema %}