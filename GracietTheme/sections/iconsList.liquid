{%comment%} Le html  de notre bloc {%endcomment%}
<div class="iconsList">
  {%for block in section.blocks %}
    {% capture _ %}{% increment myColonne %} {% endcapture %}
    <div style="grid-column: {{ myColonne }};" class="icons">
      <img src="{{ block.settings.icons | img_url: '300x300' }}">
      <h2 class="icons-h2" style="font-size:{{ block.settings.titleSize | append:'px' }}">{{ block.settings.title }}</h2>
    </div>
  {%endfor%}
</div>

{%comment%} Le schema de notre sections sui comprend
Un blocs qui a de plusieurs settings compos√© d'icones et de title {%endcomment%}
{% schema %}
{
  "name":"iconsList",
  "max_blocks":4,
  "blocks":[
  {
    "type":"Icons",
    "name":"oneIcons",
    "settings":[
      {
        "type":"text",
        "id":"title",
        "label":"Titre",
        "default":"Mon titre"
      },
      {
        "type":"image_picker",
        "id":"icons",
        "label":"L'icone"
      },
      {
        "type":"text",
        "id":"titleSize",
        "label":"Taille du titre",
        "default":"11"
      }
    ]
  }],
  "presets":[
  {
    "category":"Autre",
    "name":"Icone et titre"
  }]
}
{% endschema %}

{%comment%} Le style de notre bloc {%endcomment%}
{% style %}
  .iconsList{
    display:grid;
  }
  .icons{
    display:grid;
    justify-content:center;
    grid-row:1;
  }
  .icons-h2{
    width:max-content;
  }
{% endstyle %}