{%comment%} Ici le html{%endcomment%}
<div class="entretien">
    <div class="entretien-titre">
        <h1>{{ section.settings.title }}</h1>
    </div>
    <div class="entretien-soustitre">
        <h2>{{ section.settings.subtitle }}</h2>
    </div>
    {% for block in section.blocks %}
        <div class="entretien-block">
            {% if block.type == 'unParagraphe' %} {%comment%} Si un paragraphe {%endcomment%}
                {% if block.settings.cadre == true %}
                    {% assign hasCadre = "groove" %}
                {% else %}
                    {% assign hasCadre = "none" %}
                {% endif %}
                <div style="text-align: {{ block.settings.paragrapheTexte_alignment }}; font-size: {{ block.settings.paragrapheTailletexte | append: 'px' }}; color: {{ block.settings.paragrapheCouleurtexte }} ; border: {{ hasCadre }}; background-color: {{ block.settings.paragrapheCouleurFond }};">
                    <p>
                        {{ block.settings.unParagrapheText }}
                    </p>
                </div>
            {% elsif block.type == 'deuxParagraphes' %} {%comment%} si deux paragraphes {%endcomment%}
                {% if block.settings.deuxparagrapheCadre == true %}
                    {% assign deuxparagrapheCadre = "groove" %}
                {% else %}
                    {% assign deuxparagrapheCadre = "none" %}
                {% endif %}
                <div style="border:{{ deuxparagrapheCadre }}; background-color: {{ block.settings.deuxparagrapheCouleurFond }};" class="deuxParagraphe">
                    <div class="deuxParagraphes-premierParagraphe">
                        <h3 style="text-align: {{ block.settings.deuxparagrapheTexte_alignmentTitre }}; font-size: {{ block.settings.deuxparagrapheTailletitre | append: 'px'  }}; color: {{ block.settings.deuxparagrapheCouleurTitre }};"> 
                            {{ block.settings.deuxParagraphesTitre1 }} 
                        </h3>
                        <div style="text-align: {{ block.settings.deuxparagrapheTexte_alignmentTexte }}; font-size: {{ block.settings.deuxparagrapheTailletexte | append: 'px'  }}; color: {{ block.settings.deuxparagrapheCouleurtexte }};"> 
                            {{ block.settings.deuxParagraphesText1 }} 
                        </div>
                    </div>
                    <div class="deuxParagraphes-deuxiemeParagraphe">
                        <h3 style="text-align: {{ block.settings.deuxparagrapheTexte_alignmentTitre }}; font-size: {{ block.settings.deuxparagrapheTailletitre | append: 'px'  }}; color: {{ block.settings.deuxparagrapheCouleurTitre }};"> 
                            {{ block.settings.deuxParagraphesTitre2 }} 
                        </h3>
                        <div style="text-align: {{ block.settings.deuxparagrapheTexte_alignmentTexte }}; font-size: {{ block.settings.deuxparagrapheTailletexte | append: 'px'  }}; color: {{ block.settings.deuxparagrapheCouleurtexte }};"> 
                            {{ block.settings.deuxParagraphesText2 }} 
                        </div>
                    </div>
                </div>
            {% elsif block.type == 'IconeTexte' %} {%comment%} Si une icone et du texte {%endcomment%}
                {% if block.settings.IconeTexteCadre == true %}
                    {% assign blocIconeTexteCadre = "groove" %}
                {% else %}
                    {% assign blocIconeTexteCadre = "none" %}
                {% endif %}
                <div style="border: {{ blocIconeTexteCadre }}; background-color: {{ block.settings.IconeTexteCouleurFond }}" class="IconeTexte">
                    <div style="text-align: {{ block.settings.IconeTexte_alignmentIcone }}">
                        <img alt="{{ block.settings.IconeTexteImage.alt }}" src={{ block.settings.IconeTexteImage | img_url:"medium"}}>
                    </div>
                    <h3 style="text-align: {{ block.settings.IconeTexte_alignmentTitre }}; color: {{ block.settings.IconeCouleurTitre }}; font-size: {{ block.settings.IconeTailletitre | append: 'px'  }};">
                        {{ block.settings.IconeTitre }}
                    </h3>
                    
                    <div style="text-align: {{ block.settings.IconeTexte_alignmentTexte }}; color: {{ block.settings.IconeCouleurtexte }}; font-size: {{ block.settings.IconeTailletexte | append: 'px'  }};">
                        {{ block.settings.IconeTexte }}
                    </div>
                </div>
            {% else %} {%comment%} Si deux icones {%endcomment%}
                {% if block.settings.deuxIconeTexteCadre == true %}
                    {% assign blocDeuxIconeTexteCadre = "groove" %}
                {% else %}
                    {% assign blocDeuxIconeTexteCadre = "none" %}
                {% endif %}
                <div class="deuxIconeTexte" style="border: {{ blocDeuxIconeTexteCadre }}; background-color: {{ block.settings.deuxIconeTexteCouleurFond }};">
                    <div class="deuxIconeTexte-PremierParagraphe">
                        <div style="text-align: {{ block.settings.deuxIconeTexte_alignmentIcone }};">
                            <img src={{ block.settings.deuxIconeTexteImage1 | img_url: 'medium' }} alt="{{ block.settings.deuxIconeTexteImage1.alt }}">
                        </div>
                        <h3 style="color: {{ block.settings.deuxIconeTexteCouleurTitre }}; text-align: {{ block.settings.deuxIconeTexte_alignmentTitre }}; font-size: {{ block.settings.deuxIconeTexteTailletitre | append: 'px' }};">
                            {{ block.settings.deuxIconeTexteTitre1 }}
                        </h3>
                        <div style="color: {{ block.settings.deuxIconeTexteCouleurtexte }}; text-align: {{ block.settings.deuxIconeTexte_alignmentTexte }}; font-size: {{ block.settings.deuxIconeTexteTailletexte }};">
                            {{ block.settings.deuxIconeTexte1 }}
                        </div>
                    </div>
                    <div class="deuxIconeTexte-PremierParagraphe">
                        <div style="text-align: {{ block.settings.deuxIconeTexte_alignmentIcone }};">
                            <img src={{ block.settings.deuxIconeTexteImage2 | img_url:'medium' }} alt="{{ block.settings.deuxIconeTexteImage2.alt }}">
                        </div>
                        <h3 style="color: {{ block.settings.deuxIconeTexteCouleurTitre }}; text-align: {{ block.settings.deuxIconeTexte_alignmentTitre }}; font-size: {{ block.settings.deuxIconeTexteTailletitre | append: 'px' }};">
                            {{ block.settings.deuxIconeTexteTitre2 }}
                        </h3>
                        <div style="color: {{ block.settings.deuxIconeTexteCouleurtexte }}; text-align: {{ block.settings.deuxIconeTexte_alignmentTexte }}; font-size: {{ block.settings.deuxIconeTexteTailletexte }};">
                            {{ block.settings.deuxIconeTexte2 }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>

