{%comment%} Ici le style css{%endcomment%}
{% style %}
    .entretien{
        margin-bottom:25px;
        margin-top:25px;
        border-style:groove;
        border-color: {{ bg_color }};
        font-family: cursive;
        font-style: italic;
    }

    .entretien-titre{
        color: {{ h1_color }};
        font-size: {{ h1_font_size }};
        text-align: {{ h1_text_align }};
    }

    .entretien-soustitre{
        color: {{ h2_color }};
        font-size: {{ h2_font_size }};
        text-align: {{ h2_text_align }};
    }

    .entretien-block{
        margin-top:25px;
        margin-bottom:25px;
    }

    .deuxParagraphe{
        display:grid;
    }
    
    .deuxParagraphes-premierParagraphe{
        grid-column:1;
        grid-row:1;
    }

    .deuxParagraphes-deuxiemeParagraphe{
        grid-column:2;
        grid-row:1;
    }

    .deuxIconeTexte{
        display:grid;
    }

    .deuxIconeTexte-PremierParagraphe{
        grid-column:1;
        grid-row:1;
    }

    .deuxIconeTexte-PremierParagraphe{
        grid-column:2;
        grid-row:1;
    }

    @media screen and (max-width: 1200px)
    {   
        .deuxParagraphes-deuxiemeParagraphe{
            grid-column:1;
            grid-row:2;
        }

        .deuxIconeTexte-PremierParagraphe{
            grid-column:1;
            grid-row:2;
        }
    }

    
{% endstyle %}
