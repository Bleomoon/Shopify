{%comment%} Ici la prise en compte du schema {%endcomment%}
{% assign bg_color = section.settings.couleurFond %}

{%comment%} Ici le html{%endcomment%}
<div class="texteCadre">
    {%for block in section.blocks %}
        {% if block.type == 'oneParagraphe' %} {%comment%} si un paragraphe {%endcomment%}
            {% if block.settings.texte_position == 'Suite' %}
                {% assign positionImage = '' %}
            {% else %}
                {% assign positionImage = block.settings.texte_position %}
                <br>
            {% endif %}
            <div style="text-align: {{ positionImage }};">
                <img src={{ block.settings.oneImage | img_url: 'small' }} alt="{{ block.settings.oneImage.alt }}">
            </div>
        {% else %} {%comment%} si une image {%endcomment%}
            {% if block.settings.image_position == 'Suite' %}
                {% assign positionTexte = '' %}
            {% else %}
                {% assign positionTexte = block.settings.image_position %}
                <br>
            {% endif %}
            <p style="text-align: {{ positionTexte }}; color: {{ block.settings.couleurtexte }}; font-size: {{ block.settings.tailletexte | append: 'px' }};">
            {{ block.settings.text }} </p>
        {% endif %}
    {% endfor %}
</div>

{%comment%} Ici le sch√©ma du titre avec couleur, style, background-color etc {%endcomment%}
{% schema %}
{
    "name":"Texte Encadre",
    "settings":[
        {
            "type": "color",
            "id": "couleurFond",
            "label": "Couleur du fond",
            "default": "#ffffff"
        }
    ],
    "max_blocks":10,
    "blocks":[
    {
        "type":"oneParagraphe",
        "name":"oneParagraphe",
        "settings":[
            {
                "id":"text",
                "type":"text",
                "label":"text",
                "default":"Mon texte"
            },
            {
                "type": "color",
                "id": "couleurtexte",
                "label": "Couleur du texte",
                "default": "#d35400"
            },
            {
                "type": "text",
                "id": "tailletexte",
                "label": "taille du texte",
                "default": "75"
            },
            {
                "type": "radio",
                "id": "texte_position",
                "options": [
                    { "value": "Left", "label": "Gauche"},
                    { "value": "Center", "label": "Milieu"},
                    { "value": "Right", "label": "Droite"},
                    { "value": "Suite", "label": "A la suite"}
                ],
                "label": "Position du texte"
            }
        ]
    },
    {
        "type":"oneImage",
        "name":"oneImage",
        "settings":[
            {
                "id":"oneImage",
                "type":"image_picker",
                "label":"une image"
            },
            {
                "type": "radio",
                "id": "image_position",
                "options": [
                    { "value": "Left", "label": "Gauche"},
                    { "value": "Center", "label": "Milieu"},
                    { "value": "Right", "label": "Droite"},
                    { "value": "Suite", "label": "A la suite"}
                ],
                "label": "Alignement de l'image"
            }
        ]
    }
  ]
}
{% endschema %}

{%comment%} Ici le style css{%endcomment%}
{% style %}
    .texteCadre{
        margin-bottom:25px;
        margin-top:25px;
        border-style:groove;
        border-color: {{ bg_color }};
    }
{% endstyle %}
