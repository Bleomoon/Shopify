<div class="productTemplate">
{%comment%} Fiche Produit {%endcomment%}
<div class="ficheProduct">
    {% assign current_variant = product.selected_or_first_available_variant %}
    {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
  
    {%comment%} Zone sur les images {%endcomment%}
    <div class="ficheProduct-Img">
      <img class="ficheProduit-BigImg" alt="{{ product.title }}" src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
      <div class="ficheProduct-SousImg">
        {%assign ficheProductnbImg = 0%}
        {% for image in product.images %}
        <a class="ficheProduct-SousImg-{%increment ficheProductnbImg%}" href="{{ image.src | img_url: 'large' }}">
          <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
        </a>
        {% endfor %}
      </div>
    </div>
  
    {%comment%} Zone sur le contenu de la fiche produit {%endcomment%}
    <div class="ficheProduct-Contenu">
      {%comment%} Zone sur le titre {%endcomment%}
      <h1 class="ficheProduct-Contenu-Title">{{ product.title }}</h1>
  
      {%comment%} Zone des bouttons pour changer d'articles {%endcomment%}
      <div class="ficheProduct-OtherArticle">
        <button class="buttonRef" style="grid-row:1;"><a class="aRef" href={{ collection.next_product.url }}>
            <i class="fas fa-chevron-right"></i>
          </a></button>
      
        <button class="buttonRef" style="grid-row:2;"><a class="aRef" href={{ collection.previous_product.url }}>
            <i class="fas fa-chevron-left"></i>
          </a></button>
      </div>
  
      {%comment%} Zone sur la description du produit {%endcomment%}
      <div class="ficheProduct-Desc">{{ product.description }}</div>
  
      {%comment%} Zone sur le contenu personnalisé : prix/quantity etc {%endcomment%}
      {% form "product", product %}
        {%comment%}
        <div class="ficheProduct-personnalise" action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
          <select name="id" id="productSelect">
            {% for variant in product.variants %}
            {% if variant.available %}
            <option value="{{ variant.id }}">
              {{ variant.title }} - {{ variant.price | money_with_currency }}
            </option>
            {% else %}
            <option disabled="disabled">
              {{ variant.title }} - sold out
            </option>
            {% endif %}
            {% endfor %}
          </select>
          {{ current_variant.price | money }}
          <label for="Quantity">quantity</label>
          <input type="number" id="Quantity" name="quantity" value="1" min="1">  
          </div>
          {%endcomment%}
        <form action="/cart/add" method="post" enctype="multipart/form-data">
          <select name="id">
            {% for variant in product.variants %}
            {% if variant.available == true %}
            <option value="{{variant.id}}"> {{ variant.title }} for
              {{ variant.price | money_with_currency }}</option>
            {% else %}
            <option disabled="disabled"> {{ variant.title }} - sold out!</option>
            {% endif %}
            {% endfor %}
          </select>
          <label >quantity</label>
          <option value="{{ product.quantity }}">{{ product.quantity }}</option>
          <input type="submit" name="add" id="add" value="Add to Cart" class="button">
        </form>
        
      {% endform %}
      {%comment%} Zone des logos Facebook/Twitter/Instagram {%endcomment%}
      <div class="ficheProduct-Logos">
        <button class="buttonRef"> <a class="aRef" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fsylvie-strohl.com%2Fproduit%2Folivia-90%2F">
          <i class="fab fa-facebook"></i>
        </a></button>
      
        <button class="buttonRef"><a class="aRef" href="http://twitter.com/share?text=http://OLIVIA%2090&url=https%3A%2F%2Fsylvie-strohl.com%2Fproduit%2Folivia-90%2F"> 
          <i class="fab fa-twitter"></i>
        </a></button>
      
        <button class="buttonRef"> <a class="aRef" href="http://pinterest.com/pin/create/button/?url=https%3A%2F%2Fsylvie-strohl.com%2Fproduit%2Folivia-90%2F&media=https://sylvie-strohl.com/wp-content/uploads/2019/12/OLIVIA-90-FACE-SANS-M2TAL.jpg&description=http://OLIVIA%2090">
          <i class="fab fa-instagram"></i>
        </a></button>
      </div>
  
      {%comment%} Zone des produit associés {%endcomment%}
      <div class="ficheProduct-associateProduct">
        <button class="associateProductBtn" onclick=AssociateProductClick();>Produits associes <i class="fas fa-plus"></i></button>
        <ul class="associateProduct">
          {%assign associatePnbImg = 0%}
          {% for image in product.images %}
              <li class="associateProduct-products-{% increment associatePnbImg %}"><a href="{{ image.src | img_url: 'large' }}">
                <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
              </a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
</div>
  {% comment %} Les informations sur le produit : sa description et ces informations complémentaires qui sont : 
  - Variants, Poids, balises, type, Modèle  {% endcomment %}
  <div class="infosComplementairesProduct">
    <div class="menu-infosComplementairesProduct">
      <div id="menuButton-Description" class="menuButton-Description" onclick="switchMenuInformationsProduct(1);">
        Description
      </div>
      <div id="menuButton-Informations" class="menuButton-Informations" onclick="switchMenuInformationsProduct(2);">
        Informations complmentaires
      </div>
    </div>
    <div class="info-Description">
      <p class="info-Contenu">
        {{ product.description }}
      </p>
    </div>
    <div class="info-Informations">
      <div class="info-Contenu">
        plein de truc
      </div>
    </div>
  </div>
</div>
{%comment%} Ici le style css {% endcomment %}
{% style %}
  .productTemplate{
    display: grid;
    width:80%;
    margin-right:10%;
    margin-left:10%;
  }
  /*CSS de la fiche d'un produit*/
  .ficheProduct {
    grid-column:1;
    grid-row:1;
  }
  
  .ficheProduct-Img {
  display: grid;
  grid-column: 1/4;
  grid-row: 1;
  }
  
  .ficheProduit-BigImg {
  grid-column: 2/4;
  grid-row: 1/10;
  }
  
  .ficheProduct-SousImg {
  grid-column: 1;
  margin-left: 10px;
  margin-right: 10px;
  display: grid;
  }
  
  .ficheProduct-SousImg-0 {
  grid-row: 1/2;
  }
  
  .ficheProduct-SousImg-1 {
  grid-row: 3/4;
  }
  
  .ficheProduct-SousImg-2 {
  grid-row: 5/6;
  }
  
  .ficheProduct-SousImg-3 {
  grid-row: 7/8;
  }
  
  .ficheProduct-SousImg-4 {
  grid-row: 9/10;
  }
  
  .ficheProduct-Contenu {
  display: grid;
  grid-column: 5/7;
  grid-row: 1/2;
  }
  
  .ficheProduct-Contenu-Title {
  grid-column: 1;
  grid-row: 1;
  }
  
  .ficheProduct-OtherArticle {
  display: grid;
  grid-column: 2;
  justify-content: end;
  grid-row: 1;
  }
  
  .ficheProduct-Desc {
  grid-row: 3/5;
  }
  
  .ficheProduct-personnalise {
  grid-row: 6/7;
  }
  
  .ficheProduct-Logos {
  justify-content: end;
  grid-row: 8;
  }

  .infosComplementairesProduct{
    display:grid;
    margin-top:25px;
    margin-bottom:25px;
    grid-column:1;
    grid-row:2;
  }

  .menu-infosComplementairesProduct{
    grid-column:1;
    grid-row:1;
    margin-right:15px;
    display:grid;
    grid-column:1/2;
  }

  .menuButton-Description{
    background:none;
    background-color:black;
    color:white;
    margin-bottom:10px;
  }

  .menuButton-Description:hover{
    cursor:pointer;
  }

  .menuButton-Informations{
    background:none;
    color:gray;
    background-color:white; 
  }

  .menuButton-Informations:hover{
    cursor:pointer;
  }

  .info-Description{
    display:grid;
    border-left:solid;
    grid-column:2;
    grid-row:1;
    grid-column:3/10;
  }

  .info-Informations{
    display:none;
    border-left:solid;
    grid-column:2;
    grid-row:1;
    grid-column:3/10;
  }
  
  .info-Contenu{
    margin-left:15px;
  }
{% endstyle %}

{%comment%} Ici le javascript {% endcomment %}
<script>
  function switchMenuInformationsProduct(num)
  {
    if (num == 1)
    {
      document.getElementById("menuButton-Description").style.background-color = "gray";
      document.getElementById("menuButton-Description").style.color = "black";
      document.getElementById("menuButton-Informations").style.background-color = "black";
      document.getElementById("menuButton-Informations").style.color = "white";
      document.getElementById("info-Description").style.display= "none";
      document.getElementById("info-Informations").style.display = "grid";
    }
    else
    {
      document.getElementById("menuButton-Informations").style.background-color = "gray";
      document.getElementById("menuButton-Informations").style.color = "black";
      document.getElementById("menuButton-Description").style.background-color = "black";
      document.getElementById("menuButton-Description").style.color = "white";
      document.getElementById("info-Description").style.display = "grid";
      document.getElementById("info-Informations").style.display = "none";
    }
  }
</script>