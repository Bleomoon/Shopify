<h1>{{ page.title }}</h1>
<div> {{ page.content }} </div>

<div class="filter">

</div>

{% comment %} Ici on affiche tous les produits de la collections "All", si "All" n'existe pas alors on attend un filtre? {%endcomment%}
<div class="products">
  
  {% for collection in collections %}
    {% if collection.title == "All" %}
      {% if collection.all_products_count > 20 %}
        <p>{{ collection }}</p>
      {% else %}
        <div>
          <p>Select a collection first</p>
        </div>
      {% endif %}
    {% endif %}
  {% endfor %}
</div>

<div>
  {% for product_type in shop.types %}
    {% for product in product_type  %}
      {{ product.title }}
    {% endfor %}
    {{ product_type | link_to_type }}<br>
  {% endfor %}
</div>
<div>
  {% for product in shop.types.product %}
    <p>{{ product.title }}</p>
  {%endfor%}
</div>
