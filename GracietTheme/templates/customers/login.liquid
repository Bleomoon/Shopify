<!-- /templates/customers/login.liquid -->
{% comment %} Ici le de la page de connexion, elle comprend le html du mot de passe oublié {% endcomment %}
<div class="connexion">
  <h1 class="h1Title">Connexion</h1><br><br>
  <div class="identification">
    <h2 class="h2Title">S'identifier</h2><br>
    <br>
    {% form 'customer_login' %}
      {{ form.errors | default_errors }}
      
      <div class="identification-id">
        <label for="customer_email">Nom d’utilisateur ou adresse e-mail*</label><br>
        <input class="textInput" type="email" name="customer[email]" /><br><br><br>
      </div>
      
      <div class="identification-password">
        <label for="customer_password">Mot de passe*</label><br>
        <input class="textInput" type="password" name="customer[password]" /><br><br>
      </div>
      
      <div class="identification-submit">
        <input id="identification-checkbox" type="checkbox"/>
        <label for="customer_checkbox">Se souvenir de moi</label><br><br>
        
      </div>

      <div class="submitButton">
        <input type="submit" value="Connexion" />
      </div>
    {% endform %}
  </div>

  <div class="forgotPassword"> 
    <h2 class="h2Title">Mot de passe perdu ?</h2>
    {% form 'recover_customer_password' %}
      {{ form.errors | default_errors }}
      <div class="forgotPassword-email">
        <label for="customer_email">Adresse e-mail</label><br>
        <input class="textInput" type="email" name="email" /><br><br>
      </div>
      <div class="submitButton">
        <input class="submitButtonRef" type="submit" value="Envoyer" />
      </div>
    {% endform %}
  </div>
</div>