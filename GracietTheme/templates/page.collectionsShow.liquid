{%comment%} Ici un modele de page qui affiche l'ensemble des colllections {%endcomment%}
<div class="ShowAllCollections">
    <div class="ShowAllCollections-title">
        <h1>{{ pages.collectionsShow.title }}</h1>
    </div>
    <div class="ShowAllCollections-contenu">
        {% if shop.collections_count == 0 %}
            <div class="contenu-noCollections">
                <h2>Il n'existe encore aucune collecton</h2>
            </div>
        {% else %}
            {% increment numColonne %} {% increment numColonne %} {%comment%} On met le numCol a 2 {%endcomment%}
            {% increment numLigne %}{%comment%} On met le numLigne a 1 {%endcomment%}
            {% for collection in collections %}
                
                <div style="grid-row:{{ numLigne }}; grid-column:{{numColonne}};" class="contenu-showOneCollection">
                    <a class="aRef" href="{{ collection.url }}">
                        {% if collection.image %}
                            <div class="oneCollection-img">
                                <img src="{{ collection.image | img_url: 'medium' }}">
                            </div>
                        {% endif %}
                        <div class="oneCollection-title">
                            <h2>{{ collection.title }}</h2>
                        </div>
                    </a>
                </div>

                {%comment%} Gestion de l'affichage ligne col des collections {%endcomment%}
                {%if numColonne == 4 %}
                    {% increment numLigne %} {%comment%} On increment NumLigne {%endcomment%}
                    {%comment%} On met NumCol a 2 {%endcomment%}
                    {% decrement numColonne %} {% decrement numColonne %} 
                {% else %}
                    {% increment numColonne %} {%comment%} On increment NumCol {%endcomment%}
                {% endif %}
            {% endfor %}
        {% endif %}
    </div> 
</div>

{% style %}
    .ShowAllCollections{
        font-family: cursive;
        font-weight: bold;
    }

    .ShowAllCollections-contenu{
        display:grid;
        grid-template-columns:repeat(5,1fr);
        grid-gap:10px;
    }

    .contenu-noCollections{
        grid-column:3;
        grid-row:1;
    }

    .contenu-showOneCollection{
        text-align:center;
    }
{% endstyle %}